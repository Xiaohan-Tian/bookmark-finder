{
  "manifest_version": 3,
  "name": "Bookmark Finder",
  "description": "Bookmark Finder turns bookmarks into a searchable local database for quick, private content discovery without external data.",
  "version": "2024.1.4",
  "icons": {
    "16": "img/icon-16.png",
    "32": "img/icon-32.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs",
    "scripting",
    "bookmarks",
    "storage",
    "unlimitedStorage"
  ], 
  "host_permissions": [
    "<all_urls>"
  ]
}